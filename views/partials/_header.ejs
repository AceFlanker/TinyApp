<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/urls/register">Register</a>
      </div>

    </div>
    <% if (!username) { %>
    <form action="/login" method= "POST" class="form-inline" name="login" id="login">
      <input form="login" name="username" class="form-control mr-sm-2" type="text" placeholder="Username" minlength="3" maxlength="20" aria-label="login">
      <button form="login" type="submit" value="username" class="btn btn-outline-dark my-2 my-sm-0">Login</button>
    </form>
    <% } else { %>
    <form action="/logout" method= "POST"  name="logout" id="logout" class="form-inline">
      <span class="navbar-text text-dark text-inline mx-3">Logged In As: <%= username %>!</span>
      <button form="logout" type="submit" class="btn btn-outline-dark my-2 my-sm-0">Logout</button>
    </form>
    <% } %>
  </nav>
</header>